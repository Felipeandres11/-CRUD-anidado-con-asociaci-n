<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @company.name %>
</p>

<%= form_with(model: [@company, @employee]) do |form| %>



  <div class="field">
    <%= form.label :first_name %>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
  <%= form.label(:area, "Area") %>
  <%= form.select(:area, @area.map {|a| a.name}) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<div class="row">
  <div class="col-sm-6">

        <h1>Lista no completados</h1>

        <table class="table">
        <thead>
            <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Area</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
        <%  @employee.each do |t| %>


            <tr>
                <td><%= t.description %></td>
                <td><%= t.completed %></td>
                <td><%= t.created_at %></td>
            </tr>
        
        <% end %>

        </tbody>
        </table>
  </div>


